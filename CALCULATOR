#include <stdio.h>
void main()
{
    int a,b;
    char op;
    printf("Enter any two numbers:");
    scanf("%d%d",&a,&b);
    printf("Enter the arithmetic operator:");
    scanf(" %c",&op);

    switch(op)
    {
    case '+':
        printf("The addition is %d",a+b);
        break;
    case '-':
        printf("The subtraction is %d",a-b);
        break;
    case '*':
        printf("The multiplicatio is %d",a*b);
        break;
    case '/':
        printf("The division is %d",a/b);
        break;

    default:
        printf("Enter valid operator");
    }
}
